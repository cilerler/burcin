<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<!--#if (WindowsService)-->
		<RuntimeIdentifiers>win10-x64</RuntimeIdentifiers>
		<!--#endif-->
		<LangVersion>latest</LangVersion>
		<UserSecretsId>Burcin.Console</UserSecretsId>
		<!--#if (DockerSupport)-->
		<DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
		<DockerfileContext>..\..</DockerfileContext>
		<DockerComposeProjectPath>..\..\docker-compose.dcproj</DockerComposeProjectPath>
		<!--#endif-->
	</PropertyGroup>
	<!--#if (TemplateEditMode)-->
	<PropertyGroup>
		<DefineConstants>$(DefineConstants);EntityFramework;CacheSqlServer;CacheRedis;BackgroundService;WindowsService;</DefineConstants>
		<!-- Reference https://github.com/dotnet/templating/issues/1438 -->
		<EntityFramework>true</EntityFramework>
		<CacheSqlServer>true</CacheSqlServer>
		<CacheRedis>true</CacheRedis>
		<BackgroundService>true</BackgroundService>
		<WindowsService>true</WindowsService>
	</PropertyGroup>
	<!--#endif-->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <PlatformTarget>x64</PlatformTarget>
    	<Optimize>true</Optimize>
    </PropertyGroup>

	<PropertyGroup>
		<BuildNumber Condition=" '$(BuildNumber)' == '' ">0.0.0</BuildNumber>
		<VersionPrefix>$(BuildNumber)</VersionPrefix>
		<VersionSuffix Condition=" '$(Configuration)' == 'Debug' ">dev</VersionSuffix>
		<Product>Burcin.Console</Product>
		<Authors>(authors-xml-encoded)</Authors>
		<RepositoryUrl>(repositoryUrl-xml-encoded)</RepositoryUrl>
	</PropertyGroup>
	<ItemGroup>
		<!--#if (WindowsService)-->
		<PackageReference Include="System.ServiceProcess.ServiceController" Version="4.7.0" />
		<!--#endif-->
		<!--#if (DockerSupport)-->
		<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.9.10" />
		<!--#endif-->
		<PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="3.1.1" />
		<PackageReference Include="Microsoft.Extensions.Caching.SqlServer" Version="3.1.1" Condition="'$(CacheSqlServer)' == 'true'" />
    	<PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="3.1.1" Condition="'$(CacheRedis)' == 'true'" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Serilog.Extensions.Logging" Version="3.0.1" />
		<PackageReference Include="Serilog.Settings.Configuration" Version="3.1.0" />
		<PackageReference Include="Serilog.Enrichers.Context" Version="4.2.0" />
		<PackageReference Include="Serilog.Enrichers.Environment" Version="2.1.3" />
		<PackageReference Include="Serilog.Enrichers.Process" Version="2.0.1" />
		<PackageReference Include="Serilog.Enrichers.Thread" Version="3.1.0" />
		<PackageReference Include="Serilog.Exceptions" Version="5.4.0" />
		<PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
		<PackageReference Include="Serilog.Sinks.Seq" Version="4.0.0" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Ruya.Primitives" Version="[1.1.135,)" />
		<PackageReference Include="Ruya.AppDomain" Version="[1.1.135,)" />
		<PackageReference Include="Ruya.Extensions.Logging" Version="[1.1.135,)" />
		<PackageReference Include="Ruya.Helpers.Primitives" Version="[1.1.135,)" />
	</ItemGroup>
	<ItemGroup>
<!--#if (BackgroundService)-->
		<PackageReference Include="ncrontab" Version="3.3.1" />
<!--#endif-->
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\Burcin.Domain\Burcin.Domain.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="hostsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	<ItemGroup>
		<Content Include="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="appsettings.Development.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<DependentUpon>appsettings.json</DependentUpon>
		</Content>
		<Content Include="appsettings.Production.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<DependentUpon>appsettings.json</DependentUpon>
		</Content>
	</ItemGroup>
	<Import Project="EntityFramework.targets" Condition="Exists('EntityFramework.targets')" />
</Project>
