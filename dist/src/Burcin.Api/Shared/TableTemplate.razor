@typeparam TItem
@*@inherits TableTemplateBase<TItem>*@

<div class="table-responsive-md">
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr scope="col">@TableHeader</tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr>@RowTemplate(item)</tr>
            }
        </tbody>
        <tfoot>
            <tr>@TableFooter</tr>
        </tfoot>
        <caption>
            @TableCaption
        </caption>
    </table>
</div>
